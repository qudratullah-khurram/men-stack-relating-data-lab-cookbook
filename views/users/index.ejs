<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Community</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>

  <div class="container">
    <h1>Explore Our Community</h1>

    <% if (users.length > 0) { %>
      <ul>
        <% users.forEach((u) => { %>
          <li>
            <a class="btn" href="/users/<%= u._id %>"><%= u.username %></a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No users found.</p>
    <% } %>
  </div>
</body>
</html>
