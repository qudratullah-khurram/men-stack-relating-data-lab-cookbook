<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %>'s Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>

  <h1><%= user.username %>'s Pantry</h1>

  <% if (user.pantry.length > 0) { %>
    <ul>
      <% user.pantry.forEach((item) => { %>
        <li>
          <strong><%= item.name %></strong>
          <% if (item.quantity) { %> - Quantity: <%= item.quantity %> <% } %>
          <% if (item.category) { %> - Category: <%= item.category %> <% } %>
          <% if (item.expirationDate) { %> - Expires: <%= item.expirationDate.toDateString() %> <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>This pantry is empty.</p>
  <% } %>
</body>
</html>
